package edu.narxoz.galactic.drones;
public abstract class Drone{
    private String id;
    private DroneStatus status;
    private double maxPlayloadKg;

    protected Drone(String id double maxPlayloadKg){
        if(maxPlayloadKg <= 0) throw new IllegalArgumentException("must be > 0");
        this.id = id;
        this.maxPlayloadKg = maxPlayloadKg;
        this.status = DroneStatus.IDLE;
    }
    public abstract double speedKmPerMin();
    public String getId(){
        return id;
    }
    public DroneStatus getStatus(){
        return status;
    }
    public double getMaxPayloadKg(){
        return maxPlayloadKg;
    }
    public void setStatus(DroneStatus status) {
        this.status = status;
    }
}
